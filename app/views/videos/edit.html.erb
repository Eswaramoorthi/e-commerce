<div class="container">   
  
<%= form_for @video, url: {action: :update} do |f| %>   
     
   <h3>Add a Video</h3>   
 <%= "<div>#{@video.errors.full_messages.first}</div>".html_safe if @video.errors.any? %>   
    <p>   
  
     <div>   
            <label>Video Name</label>   
            <%= f.text_field :name %>   
     </div>   
  
     <div>   
            <label>Price</label>   
            <%= f.text_field :price %>   
     </div>   
        
     <div>   
            <label>Description</label>   
            <%= f.text_field :description %>   
     </div>   
  
      </p>   
   <div>   
      <%= link_to 'Back', { controller: 'videos', action: 'index'} %>   
      <%= f.submit 'Update Video' %>   
    </div>   
<% end %>   
</div> 